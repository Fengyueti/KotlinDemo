<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/denglu"
    tools:context=".activity.LoginActivity">

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:textColorHint="#eeeeee"
        android:textColor="#eeeeee"
        android:textSize="18sp"
        android:background="#00000000"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="10dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@mipmap/log_icon_phone_default"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        ></View>

    <EditText
        android:textColor="#eeeeee"
        android:id="@+id/login_pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="登录密码"
        android:background="#00000000"
        android:textColorHint="#eeeeee"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="10dp"
        android:drawablePadding="20dp"
        android:password="true"
        android:drawableRight="@mipmap/log_icon_eye_default"
        android:drawableLeft="@mipmap/log_icon_lock_default"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        ></View>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/resign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/btn"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="130dp"
        android:layout_width="330dp"
        android:layout_height="40dp"
        />

</LinearLayout>